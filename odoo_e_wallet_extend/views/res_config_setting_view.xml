<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="inherit_res_config_settings_wallet_extend_view_form" model="ir.ui.view">
        <field name="name">inherit.res.config.settings.wallet.extend.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='website']" position="inside">
                <h2>電子錢包擴展</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" >
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                             <div class="row mt16">
                                <label for="e_wallet_writeoff_auto" class="col-lg-4 o_light_label"/>
                                <field name="e_wallet_writeoff_auto"/>
                                <label for="e_wallet_virtualaccount_type" class="col-lg-4 o_light_label"/>
                                <field name="e_wallet_virtualaccount_type"/>
                                <label for="e_wallet_writeoff_user" class="col-lg-4 o_light_label"/>
                                <field name="e_wallet_writeoff_user"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 o_setting_box" id="website_action_setting" style="margin-left: 30px; margin-bottom: 16px;">
                        <button name="update_partner_virtualaccount" type="object" string="更新客戶虛擬帳戶" class="btn btn-primary" icon="fa-globe"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_company_form_inherit_e_wallet" model="ir.ui.view">
        <field name="name">res.company.form.inherit.e.wallet</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website']" position="after">
                <field name="e_wallet_virtualaccount_type"/>
            </xpath>
        </field>
    </record>

    </data>
</odoo>