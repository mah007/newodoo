        <record id="website_e_wallet_view_tree" model="ir.ui.view">
            <field name="name">Website E Wallet Tree</field>
            <field name="model">website.e.wallet</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="order_debit_tag_id"/>
                    <field name="active"/>
                    <field name="show_transactions"/>
                </tree>
            </field>
        </record>

        <record id="website_e_wallet_view_form" model="ir.ui.view">
            <field name="name">Website E Wallet Form</field>
            <field name="model">website.e.wallet</field>
            <field name="arch" type="xml">
                <form>
                  <sheet>
                    <group col="4">
                      <field name="name"/>
                      <field name="company_id"/>
                      <field name="order_debit_tag_id" domain="[('txn_type','=','debit')]"
                            widget="selection" options="{'no_create': True}"/>
                      <field name="active"/>
                      <field name="show_transactions"/>
                      <field name="image" widget="image"/>
                    </group>
                  </sheet>
                </form>
            </field>
        </record>

        <record id="transaction_tags_view_tree" model="ir.ui.view">
            <field name="name">Transaction tags tree</field>
            <field name="model">website.transaction.tags</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="txn_type"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="transaction_histroy_view_tree" model="ir.ui.view">
            <field name="name">Transaction tree</field>
            <field name="model">website.transactions</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="transaction_id"/>
                    <field name="wallet_id"/>
                    <field name="partner_id"/>
                    <field name="amount"/>
                    <field name="currency_id"/>
                    <field name="total_amount"/>
                    <field name="sale_order_line_ids"/>
                    <field name="txn_type"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="sale_order_wallet_tree" model="ir.ui.view">
            <field name="name">Sale Order Tree</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="wallet_debit"/>
                    <field name="user_id"/>
                    <field name="order_line"/>
                    <field name="amount_total"/>
                </tree>
            </field>
        </record>

        <record id="wallet_transaction_tree" model="ir.ui.view">
            <field name="name">wallet_transactions_tree</field>
            <field name="model">website.transactions</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="transaction_id"/>
                    <field name="total_amount"/>
                    <field name="currency_id"/>
                    <field name="txn_type"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="transaction_history_view_form" model="ir.ui.view">
            <field name="name">Transaction form</field>
            <field name="model">website.transactions</field>
            <field name="arch" type="xml">
                <form duplicate="0">
                    <header>
                      <button type="object" name="credit" string="Credit" attrs="{'invisible':['|',('txn_type','!=','credit'),('state','in',['done','cancelled'])]}" class="oe_highlight"/>
                      <button type="object" name="debit" string="Debit" attrs="{'invisible':['|',('txn_type','!=','debit'),('state','in',['done','cancelled'])]}" class="oe_highlight"/>
                      <button type="object" name="cancel" string="Cancel" attrs="{'invisible':['|',('state','=','done'),('state','=','cancelled')]}" class="oe_highlight"/>
                      <button type="object" name="draft" string="Draft" attrs="{'invisible':[('state','in',['done','draft'])]}" class="oe_highlight"/>
                      <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                      <div class="oe_button_box " name="wallet_button_box">
                          <button name="sale_order_view"
                              type="object"
                              class="oe_stat_button oe_inline"
                              icon="fa-pencil-square-o"
                              attrs="{'invisible': ['|',('sale_order_id', '=', None),'|',('txn_type','=','credit'),('reference','=','manual')]}">
                              <field name="sale_order_id" widget="statinfo" string="Sale Order" class="oe_inline"/>
                          </button>
                        </div>
                        <group col="4">
                            <field name="transaction_id"/>
                            <field name="wallet_id" attrs="{ 'readonly' : True }"/>
                            <field name="transaction_datetime" attrs="{ 'readonly' :True }"/>
                        </group>
                        <group col="4">
                            <field name="partner_id" attrs="{ 'readonly' :[('state','in',['done','cancelled'])]}"/>
                            <field name="reference"/>
                            <field name="txn_type" attrs="{ 'readonly' :[('state','in',['done','cancelled'])]}"/>
                            <field name="amount" attrs="{ 'readonly' :[('state','in',['done','cancelled'])]}" string="E-Wallet amount"/>
                            <field name="tag_ids" widget="many2many_tags" attrs="{ 'readonly' :[('state','in',['done','cancelled'])]}" options="{'no_create': True}"/>
                            <field name="currency_id" attrs="{ 'readonly' : True }"/>
                        </group>
                        <!-- <group col="2"> -->
                        <div style="padding: 20px 0;display: inline-block;">
                          <label for="total_amount" string="Total Converted Amount"/>
                        </div>
                        <div style="padding:20px 4px 0;padding-left:10px;display: inline-block;">
                          <field name="total_amount" attrs="{ 'readonly' : True}" />
                          <span style="padding-left:4px">
                            <field name="wallet_currency_id" attrs="{ 'readonly' : True}" />
                          </span>
                        </div>
                        <!-- </group> -->
                        <field name="sale_order_line_ids" attrs="{'invisible':['|',('txn_type','=','credit'),('reference','=','manual')],'readonly' :[('state','in',['done','cancelled'])]}" widget="one2many_list"/>
                    </sheet>
                    <footer>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wallet_customers_view_kanban" model="ir.ui.view">
            <field name="name">Wallet Customers</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <kanban string="Wallet Customers kanban" class="o_res_partner_kanban">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="parent_id"/>
                    <field name="phone"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="zip"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <field name="mobile"/>
                    <field name="state_id"/>
                    <field name="wallet_credit"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_res_partner_kanban">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('res.partner','image',record.id.value)" t-att-alt="name"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title oe_partner_heading"><field name="name"/></strong>
                                    <div class="o_kanban_tags_section oe_kanban_partner_categories">
                                        <ul>
                                            <li><field name="email"/></li>
                                            <li><field name="street"/></li>
                                            <li>E-Wallet:<field name="wallet_credit" widget="monetary"/></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="website_transaction_history_search" model="ir.ui.view">
            <field name="name">Transaction Search</field>
            <field name="model">website.transactions</field>
            <field name="arch" type="xml">
                <search string="Search Transaction History">
                    <field name="partner_id" string="Customer" filter_domain="[('partner_id','ilike',self)]"/>
                    <field name="transaction_id" string="Txn Id" />
                    <field name="sale_order_id" string="Sale Order"/>
                    <field name="wallet_id" string="Wallet"/>
                    <group>
                      <filter string="State" name="group_by_state" context="{'group_by':'state'}"/>
                      <filter string="Type" name="group_by_txn_type" context="{'group_by':'txn_type'}"/>
                      <filter string="Customer" name="group_by_customer" context="{'group_by':'partner_id'}"/>
                      <filter string="Wallet" name="group_by_wallet" context="{'group_by':'wallet_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="website_e_wallet_action">
            <field name="name">Website E-Wallet</field>
            <field name="res_model">website.e.wallet</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="website_e_wallet_view_tree"/>
        </record>

        <record model="ir.actions.act_window" id="website_wallet_transaction_action">
            <field name="name">Transaction Tags</field>
            <field name="res_model">website.transaction.tags</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="transaction_tags_view_tree"/>
        </record>

        <record model="ir.actions.act_window" id="website_transaction_history_action">
            <field name="name">Transaction</field>
            <field name="res_model">website.transactions</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="website_transaction_history_search"/>
            <field name="context">{'search_default_group_by_txn_type':1}</field>
            <!-- <field name="context">{'group_by':'txn_type'}</field> -->
        </record>

        <record model="ir.actions.act_window" id="website_transaction_history_action_2">
            <field name="name">Transaction</field>
            <field name="type">ir.actions.act_window</field>
            <!-- <field name="src_model">res.partner</field> -->
            <field name="res_model">website.transactions</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="website_transaction_history_search"/>
            <!-- <field name="context">{'partner_id':active_id}</field> -->
          </record>

        <record model="ir.actions.act_window" id="website_customers_action">
            <field name="name">Website Customers</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="wallet_customers_view_kanban"/>
        </record>

        <record model="ir.actions.act_window" id="sale_order_action">
            <field name="name">Sale_Order</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="sale_order_wallet_tree"/>
        </record>

        <menuitem name="Website Wallet"
                id="website_wallet_main_menu"
                parent="website.menu_website_configuration"
                sequence="11"
                groups="sales_team.group_sale_manager"
            />
            <menuitem name="Transaction Tags"
                    id="website_wallet_transaction_tags"
                    parent="odoo_e_wallet.website_wallet_main_menu"
                    action="website_wallet_transaction_action"
                    sequence="10"
                />
            <menuitem name="Transactions"
                    id="website_transaction_history"
                    parent="odoo_e_wallet.website_wallet_main_menu"
                    action="website_transaction_history_action"
                    sequence="9"
            />
            <menuitem name="Customers"
                    id="website_customers"
                    parent="odoo_e_wallet.website_wallet_main_menu"
                    action="website_customers_action"
                    sequence="11"
            />
            <menuitem name="Website E-Wallet"
                    id="website_e_wallet"
                    parent="odoo_e_wallet.website_wallet_main_menu"
                    action="website_e_wallet_action"
                    sequence="13"
            />

    </data>
</odoo>
