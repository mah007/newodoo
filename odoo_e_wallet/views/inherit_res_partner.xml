        <record id="inherit_website_wallet_partner_view" model="ir.ui.view">
            <field name="name">inherit_website_wallet_partner_form_view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button name="%(website_transaction_history_action_2)d" type="action"
                            class="oe_stat_button" icon="fa-suitcase">
                        <field name="wallet_credit" widget="monetary"/>
                    </button>
                </xpath>
            </field>
        </record>

    </data>
